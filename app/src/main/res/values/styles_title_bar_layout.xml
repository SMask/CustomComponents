<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 标题栏 -->
    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <!-- 标题栏 Icon -->
    <style name="TitleBar_Icon">
        <item name="android:layout_width">@dimen/title_bar_width_icon</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:paddingStart">@dimen/title_bar_padding_horizontal_icon</item>
        <item name="android:paddingEnd">@dimen/title_bar_padding_horizontal_icon</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- 标题栏 返回按钮 -->
    <style name="TitleBar_Icon_Back" parent="TitleBar_Icon">
        <item name="android:src">@drawable/icon_back_black</item>
    </style>

    <!-- 标题栏 标题 -->
    <style name="TitleBar_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_bar_text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>